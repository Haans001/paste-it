{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["standard", "prettier"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": ["error", { "usePrettierrc": true }],
        "plugins": ["@typescript-eslint", "prettier"],
        "indent": "off",
        "no-console": "off",
        "semi": [2, "always"],
        "implicit-arrow-linebreak": "off",
        "max-len": "off"
    }
}
